<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" ref="stylesheet" type="text/css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @*<link rel="stylesheet" href="https://bootswatch.com/5/morph/bootstrap.css" />*@
    <link rel="stylesheet" href="https://bootswatch.com/5/minty/bootstrap.css" />
    <link rel="stylesheet" href="~/Views/Shared/LinkStale.css">
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-dark bg-primary">
        <div class="container">          
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink("Расписание", "Index", "Home", null, new { style = "color:white; font-size: 18px", @class = "my-class" })</li>
                </ul>
                @*<a href="../" class="navbar-brand">Расписание</a>*@
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Настройки доступа", "Index", "Access", null, new { style = "color:white; font-size: 18px" })</li>
                </ul>

                @*<ul class="navbar-nav ms-md-auto">
        <li class="nav-item">
            <a target="_blank" rel="noopener" class="nav-link" href="https://github.com/thomaspark/bootswatch/"><i class="fa fa-github"></i> GitHub</a>
        </li>
        <li class="nav-item">
            <a target="_blank" rel="noopener" class="nav-link" href="https://twitter.com/bootswatch"><i class="fa fa-twitter"></i> Twitter</a>
        </li>*@
                @*</ul>*@
            </div>       
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/site.js" asp-append-version="true"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

